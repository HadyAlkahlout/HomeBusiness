<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="190dp"
        android:height="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerX="45"
                android:type="linear"
                android:endColor="#619F9696"
                android:centerColor="#61A1A1A1"
                android:startColor="#619F9F9F" />
            <corners android:radius="10000dp" />
        </shape>
    </item>

    <item
        android:width="183dp"
        android:height="46dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#F8F4F4" />
            <corners android:radius="10000dp" />
        </shape>
    </item>

</layer-list>